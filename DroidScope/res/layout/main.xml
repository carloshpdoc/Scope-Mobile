<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:weightSum="1">

	<ToggleButton android:id="@+id/led" android:textOn="ON"
		android:textOff="OFF" android:layout_marginTop="10dip"
		android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
		android:layout_weight="0.08" android:layout_width="77dp"></ToggleButton>

	<SeekBar android:layout_height="wrap_content" android:id="@+id/pwm"
		android:layout_marginLeft="5dip" android:layout_marginTop="10dip"
		android:max="255" android:layout_width="308dp"></SeekBar>
	<TextView android:id="@+id/txt" android:textStyle="bold"
		android:textSize="40dip" android:layout_width="wrap_content"
		android:layout_marginTop="10dip" android:text="Sensor: "
		android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_weight="0.11"></TextView>
	<Button android:text="Go to Graph" android:id="@+id/btGraph" android:layout_marginTop="60dip"
	android:layout_height="wrap_content" android:layout_weight="0.07"
	android:layout_width="138dp" android:layout_gravity="center_horizontal"></Button>
</LinearLayout>
